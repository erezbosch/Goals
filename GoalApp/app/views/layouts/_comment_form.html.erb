
<form action=<%= comments_url %> method="post">
  <input type="hidden"
         name="authenticity_token"
         value=<%= form_authenticity_token %>>

  <label for="comment_body">Body</label>
  <input type="text" name="comment[body]" id="comment_body">
  <input type="hidden" name="comment[commentable_type]" value="<%= type %>">
  <input type="hidden" name="comment[commentable_id]" value="<%= params[:id] %>">
  <input type="submit" value="Add comment">
</form>
